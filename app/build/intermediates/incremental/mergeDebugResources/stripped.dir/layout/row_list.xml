<?xml version="1.0" encoding="utf-8"?>

                                                        


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/row_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_4sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"

                    />

                <TextView
                    android:id="@+id/tvDataTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="dasdassad"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />
            </FrameLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
         